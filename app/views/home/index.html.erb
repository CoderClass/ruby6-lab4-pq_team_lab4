<h1>Welcome</h1>
<p>This is a basic chat app</p>

<ul class="list-group">
  <% @rooms.each do |room| %>
  <li class="list-group-item"><%= link_to room.name, room_path(id: room.id) %></li>
  <% end %>
</ul>

<% form_for @rooms do |f| %>
	<% f.label :name %>
	<% f.text_field :name %>

	<% f.submit %>
<% end %>